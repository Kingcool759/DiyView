<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--自定义系列1：实心圆-->
    <declare-styleable name="SolidCircle">
        <attr name="circle_text" format="string" />
        <attr name="circle_textSize" format="dimension" />
        <attr name="circle_textColor" format="color" />
        <attr name="circle_color" format="color"/>
        <attr name="circle_backgroud" format="color" />
    </declare-styleable>

    <!--自定义系列2：带颜色的圆环-->
    <declare-styleable name="ColorRing">
        <attr name="ring_color" format="color"/>
        <attr name="ring_width" format="integer" />
    </declare-styleable>

</resources>